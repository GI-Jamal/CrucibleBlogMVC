@model IEnumerable<CrucibleBlogMVC.Models.BlogPost>

@using CrucibleBlogMVC.Services.Interfaces
@using CrucibleBlogMVC.Enums

@inject IImageService _ImageService

@{
    ViewData["Title"] = "Index";
}



<div class="axil-post-list-area axil-section-gap bg-color-white">
    <div class="container">
        <h1>Index</h1>
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h2 class="title mb--40">Articles By This Author</h2>
                </div>
            </div>
            <div class="col-lg-8 col-xl-8">
                @foreach (BlogPost blogPost in Model)
                {
                    <!-- Start Post List  -->
                    <div class="content-block post-list-view mt--30">
                        <div class="post-thumbnail">
                            <a asp-action="Details" asp-route-slug="@blogPost.Slug">
                                <img src="@_ImageService.ConvertByteArrayToFileAsync(blogPost.ImageData, blogPost.ImageType, (int)DefaultImage.BlogPostImage)">
                            </a>
                        </div>
                        <div class="post-content">
                            <div class="post-cat">
                                <div class="post-cat-list">
                                    <a class="hover-flip-item-wrapper" href="#">
                                        <span class="hover-flip-item">
                                            <span data-text="@blogPost.Category?.Name">@blogPost.Category?.Name</span>
                                        </span>
                                    </a>
                                </div>
                            </div>
                            <h4 class="title">
                                <a asp-action="Details" asp-route-slug="@blogPost.Slug">
                                    @blogPost.Title
                                </a>
                            </h4>
                            <div class="post-meta-wrapper">
                                <div class="post-meta">
                                    <div class="content">
                                        <h6 class="post-author-name">
                                            <a class="hover-flip-item-wrapper" href="author.html">
                                                <span class="hover-flip-item">
                                                    <span data-text="Jamal Gibson">Jamal Gibson</span>
                                                </span>
                                            </a>
                                        </h6>
                                        <ul class="post-meta-list">
                                            <li>@blogPost.CreatedDate.ToString("MMM dd, yyyy")</li>
                                            @*<li>3 min read</li>*@
                                        </ul>
                                    </div>
                                </div>
                                <ul class="social-share-transparent justify-content-end">
                                    <li><a asp-action="Edit" asp-route-id="@blogPost.Id"><i class="fa-solid fa-file-pen fa-xl"></i></a></li>
                                    <li><a asp-action="Details" asp-route-slug="@blogPost.Slug"><i class="fa-solid fa-file-invoice fa-xl"></i></a></li>
                                    <li><a asp-action="Delete" asp-route-id="@blogPost.Id"><i class="fa-solid fa-trash fa-xl"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- End Post List  -->
                }
            </div>
        </div>
    </div>
</div>